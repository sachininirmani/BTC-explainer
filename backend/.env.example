# Backend admin token (required for POST /api/admin/refresh)
ADMIN_TOKEN=change-me

# PostgreSQL (local docker compose defaults)
SPRING_DATASOURCE_URL=jdbc:postgresql://localhost:5432/btc_explainer
SPRING_DATASOURCE_USERNAME=btc_explainer
SPRING_DATASOURCE_PASSWORD=btc_explainer

# Optional - override daily cron (UTC)
# APP_JOBS_DAILY_CRON=0 15 2 * * *

# Optional - user API rate limit (requests per minute per IP)
# APP_RATE_LIMIT_RPM=120

# OpenAI (optional)
# If not set, the backend will automatically fall back to a deterministic explanation.
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_ENABLED=true
